				</field>

				<field name="yandex_metrika_noindex"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_BLANK_J3_YAM_NOINDEX_LABEL" >
					   <option value="1">JYES</option>
					   <option value="0">JNO</option>
				</field>

