					description="TPL_BLANK_J3_TOP_CENTER_CLASS_DESC" />

				<field name="top_right_class" type="text" class="span4" default="col-xs-12 col-sm-4 col-md-4 col-lg-4"
					label="TPL_BLANK_J3_TOP_RIGHT_CLASS_LABEL"
