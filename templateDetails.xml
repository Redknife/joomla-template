				<field name="bottom_right_class" type="text" class="span4" default="col-xs-12 col-sm-4 col-md-4 col-lg-4"
					label="TPL_BLANK_J3_BOTTOM_RIGHT_CLASS_LABEL"
					description="TPL_BLANK_J3_BOTTOM_RIGHT_CLASS_DESC" />
			</fieldset>

			<fieldset name="style">
				
				<field name="enable_full_bootstrap"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_BLANK_J3_ENABLE_FULL_BOOTSTRAP_LABEL" >
					   <option value="1">JYES</option>
					   <option value="0">JNO</option>
				</field>

				<field name="enable_tmpl_styles"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_BLANK_J3_ENABLE_TMPL_STYLES_LABEL" >
					   <option value="1">JYES</option>
					   <option value="0">JNO</option>
				</field>

				<field name="body_background_color" class="" type="color" default="#ffffff"
